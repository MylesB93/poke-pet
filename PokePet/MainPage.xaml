<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokePet.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry x:Name="entry"
               Placeholder="Enter a Pokémon"
               Completed="OnEntryCompleted" />

            <Label x:Name="resultLabel"
               FontSize="18" />

            <Button x:Name="accept"
                Text="Yes"
                IsVisible="False"
                Clicked="OnAcceptButtonClicked" />
            <Button x:Name="cancel"
                Text="No"
                IsVisible="False"
                Clicked="OnCancelButtonClicked" />

            <CollectionView ItemsSource="{Binding PokemonList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5" BackgroundColor="LightGray">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" />
                                <Button x:Name="deletePokemon"
                                        Text="Delete"
                                        Clicked="OnDeleteButtonClicked"
                                        CommandParameter="{Binding PokemonId}"/>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
