<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokePet.PokemonListing"
             Title="PokemonListing">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding PokemonList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" BackgroundColor="LightGray">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" />
                            <Button x:Name="releasePokemon"
                                        Text="Release"
                                        Clicked="OnReleaseButtonClicked"
                                        CommandParameter="{Binding PokemonId}"/>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>